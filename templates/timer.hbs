<div class="timer animated fadeIn" style={{visible}}>
  <div class="timer__controls grid grid--center" style="{{ bottomValue }}">
      <div class="timer__progress grid-cell u-1of2">
        <span>
          <select type="number" id="{{ minutesId }}" class="timer__time timer__time--seconds">
            {{#each minutes}}
              <option value="{{this.value}}">{{this.display}}</option>
            {{/each}}
          </select>
          <span class="timer__colon">:</span>
          <select type="number" id="{{ secondsId }}" class="timer__time timer__time--seconds">
            {{#each seconds}}
              <option value="{{this.value}}">{{this.display}}</option>
            {{/each}}
          </select>
        </span>
      </div>
      <button class="button button--warning grid-cell u-1of2" id="{{ buttonId }}">{{action}}</button>
  </div>
</div>
