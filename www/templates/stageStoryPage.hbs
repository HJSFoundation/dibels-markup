<div class="story container" style="position:absolute;top:0px;left:0px;width:100%;height:100%;z-index:100;background-color: white">
  <div class="stage--story stage">
    <div class="stage--story__gallery">
      {{#each pages}}
        <div class="story__page">
          <figure class="story__image js-storyFlip">
            <img src="img/stories/{{ ../storyId }}/{{ this.image }}" alt={{this.image}}>
            <figcaption class="story__text">
              {{#each this.linesArray}}

                <span class="story__text__number">{{ math @index "+" 1 }}.</span>{{ this }}</br>
              {{/each}}
            </figcaption>
          </figure>
          <div class="story__text story__text--teacher js-storyTextTeacher">
              {{#each this.linesArray}}
                <span class="story__text--teacher__number">{{ math @index "+" 1 }}.</span>{{ this }}</br>
              {{/each}}
          </div>
        </div>
      {{/each}}
    </div>
    <footer class="story__footer">
      <button class="story__flip js-storyButtonFlip"></button>
      <button class="button button--close js-closeOverlayButton"></button>
    </footer>
    <div class="js-readingStrategies"></div>
  </div>
</div>